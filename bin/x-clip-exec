#!/bin/sh -e
##:
#h: Usage: x-clip-exec
#h:
#h: Execute the commands in the clipboard.
##:
x_clip_exec() (
    export CMD="$(xclip -selection "clipboard" -o)"
    xterm -e sh -e -c '
    echo ================================
    echo "$CMD"
    echo ================================
    if eval "$CMD"; then
        echo SUCCESS
    else
        echo FAILURE
    fi
    read ign
    '
)
if test @"$(basename "$0")" = @"x-clip-exec";then
    case "${1}" in
        -h|--help) sed -n 's/^ *#h: \{0,1\}//p' "$0";;
        *)         x_clip_exec "$@"; exit 0;;
    esac
fi
