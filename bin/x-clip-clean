#!/bin/sh -e
##:
#h: Usage: x-clip-clean
#h:
#h: Clean selection from trash.
##:
x_clip_clean() {
    local tmp="$(mktemp)"
    xclip -selection "clipboard" -o | sed '
    s|^\.\.*||g
    s|^ *||g
    s|^\([0-9]*\),\([0-9]*\) *â‚¬|\1.\2 EUR|
    s|^\([0-9]*\),\([0-9][0-9]\)|\1.\2 EUR|
    ' | tr -d '\n' | xclip -selection "clipboard" -i
}
if test @"$(basename "$0")" = @"x-clip-clean";then
    case "${1}" in
        -h|--help) sed -n 's/^ *#h: \{0,1\}//p' "$0" ;;
        *)         x_clip_clean "$@"; return 0       ;;
    esac
fi
