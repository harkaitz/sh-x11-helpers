#!/bin/sh -e
##:
#h: Usage: x-clip-edit : Edit clipboard content.
#x:
#x: Dependencies: xclip
##:
. x-editor
x_clip_edit() {
    local tmp="$(mktemp)"
    xclip -selection "clipboard" -o > "${tmp}" || true
    x-editor "${tmp}"
    xclip -selection "clipboard" -i < "${tmp}" || true
}
if test @"$(basename "$0")" = @"x-clip-edit";then
    case "${1}" in
        -h|--help) sed -n 's/^ *#h: \{0,1\}//p' "$0";;
        *)         x_clip_edit "$@"; exit 0;;
    esac
fi
